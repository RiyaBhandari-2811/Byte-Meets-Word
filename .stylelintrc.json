{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "scss/at-rule-no-unknown": true,
    "scss/operator-no-unspaced": true,
    "no-invalid-double-slash-comments": true,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["//"]
      }
    ]
  }
}
